<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="CookieClicker_Avalonia.MainWindow"
        Width="400" Height="500"
        Title="CookieClicker_Avalonia">
        <Grid>
                <StackPanel>
                    <Image Source="avares://CookieClicker-Avalonia/Assets/Cookie.png" Cursor="Hand" PointerPressed="CookieClicked"/>
                    <TextBlock x:Name="CounterText" Text="Clicks: 0" FontSize="20"
                               HorizontalAlignment="Center"/>
                </StackPanel>
        </Grid>
   
</Window>
